<% if obj.errors.any? %>
  <div class="row mb-4">
    <div class="col-sm-12">
      <div class="card bg-danger shadow">
        <div class="card-header">
          <h4 class="card-title">
            <%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class.name.downcase %> from being saved:
          </h4>
          <div class="card-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>