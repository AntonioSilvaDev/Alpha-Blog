<div class="container">
  <% users.each do |user| %>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        <div class="card text-center shadow bg-white mb-5">
          <div class="card-header font-italic">
            <%= link_to user.username.capitalize, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravitar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "View profile", user_path(user), class: "btn btn-sm btn-outline-success" %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-sm btn-outline-primary" %>
          </div>
          <div class="card-footer">
              <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>